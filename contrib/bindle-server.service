 Run these steps as root.
;
;     $ sudo su
;
; First, create a new user/group called 'bindle':
;
;     $ useradd bindle
;     $ passwd bindle
;
; Put bindle-server in /usr/local/bin and give it appropriate ownership and permissions:
;
;     $ mv /path/to/bindle-server /usr/local/bin
;     $ chown root:root /usr/local/bin/bindle-server
;     $ chmod 755 /usr/local/bin/bindle-server
;     $ sudo setcap 'cap_net_bind_service=+ep' /usr/local/bin/bindle-server
;
; Place your bindle configuration file ("bindle.toml") in the proper directory and give it appropriate ownership and permissions:
;
;     $ mkdir /etc/bindle
;     $ mv bindle.toml /etc/bindle/
;     $ chown -R bindle:bindle /etc/bindle/
;
; Create /var/bindle so bindle-server can store its bindles there:
;
;     $ mkdir /var/bindle
;     $ chown -R bindle:bindle /var/bindle/
;
; Then install this systemd unit:
;
;     $ mv bindle-server.service /etc/systemd/system
;     $ chown root:root /etc/systemd/system/bindle-server.service
;     $ chmod 644 /etc/systemd/system/bindle-server.service
;     $ systemctl daemon-reload
;     $ systemctl start bindle-server
;     $ systemctl enable bindle-server

[Unit]
Description=bindle server
After=network-online.target
Wants=network-online.target systemd-networkd-wait-online.service

[Service]
Restart=on-abnormal
User=bindle
Group=bindle
ExecStart=/usr/local/bin/bindle-server --config-path /etc/bindle/bindle.toml --directory /var/bindle
; Hide /home, /root, and /run/user.
ProtectHome=true
; Make /usr, /boot, /etc and possibly some more folders read-only.
ProtectSystem=full
; ...Except /var/bindle, because we want to store bindles there.
ReadWriteDirectories=/var/bindle
; The following additional security directives only work with systemd v229 or later.
; They further restrict privileges that can be gained by bindle. Uncomment if you like.
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
